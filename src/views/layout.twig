<!doctype html>
<html lang="en">
<head>
  <title>{{ messages.title.en }}</title>
  <meta name="description" content="{{ messages.description.en }}" />
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="shortcut icon" href="assets/scala-logo-16x16.png" type="image/png" />
  <link rel="apple-touch-icon" sizes="57x57" href="assets/scala-logo-57x57.png" type="image/png" />
  <link rel="apple-touch-icon" sizes="72x72" href="assets/scala-logo-72x72.png" type="image/png" />
