  <script src="assets/highlight.pack.js"></script>
  <script src="script.js"></script>
  <script>hljs.initHighlightingOnLoad();</script>
</head>
<body>
  <header id="main-header">
    <h1 id="main-title">
      {% for lang, text in messages.title %}
        <a class="i18n" lang="{{ lang }}" href="">{{ text }}</a>
      {% endfor %}
    </h1>
    <nav id="main-languages">
      <ul id="main-language-list">
        {% for lang in languages %}
          <li class="language-link"><a data-lang="{{ lang.code }}" href="index.html{% if lang.code != 'en' %}?lang={{ lang.code }}{% endif %}">{{ lang.name }}</a></li>
        {% endfor %}
        <li class="language-link"><a href="https://github.com/superruzafa/visual-scala-reference#translations">+</a></li>
      </ul>
    </nav>
    <nav id="social">
